             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCM3.Views.Controls.Trainer"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">
