<UserControl x:Class="HCM3.Views.Controls.CheckpointListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCM3.Views.Controls"
             xmlns:cnv="clr-namespace:HCM3.Converters"
             xmlns:b="clr-namespace:HCM3.Views"
              xmlns:viewModels="clr-namespace:HCM3.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="593" d:DesignWidth="300"
             xmlns:dd="urn:gong-wpf-dragdrop"

             d:DataContext="{d:DesignInstance viewModels:CheckpointViewModel, IsDesignTimeCreatable=True}">
    <Grid >
        <Grid.Resources>
            <cnv:DifficultyConverter x:Key="DifficultyConverter" />
            <cnv:IGTConverter x:Key="IGTConverter" />
        

            <ContextMenu x:Key="SelectedCheckpointContext"  >
                <MenuItem Header="Add" />
                <MenuItem Header="Delete" />
                <MenuItem Header="Edit" />
                
            </ContextMenu>

        </Grid.Resources>

        <ListView  AlternationCount="2" SelectedItem="{Binding SelectedCheckpoint}" ItemsSource="{Binding CheckpointCollection}" ScrollViewer.HorizontalScrollBarVisibility="Auto" dd:DragDrop.IsDragSource="True" dd:DragDrop.IsDropTarget="True" dd:DragDrop.DropHandler="{Binding}" Background="{DynamicResource WhiteSmoke}">
            <ListView.Resources>
                <ContextMenu x:Key="CheckpointContextMenu">
                    <MenuItem Header="Inject" 
                        Command="{Binding Path=Parent.DataContext.Inject, 
                    RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}"  />

                    <MenuItem Header="Rename" 
                        Command="{Binding Path=Parent.DataContext.RenameCheckpoint, 
                    RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}"  />


                    <MenuItem Header="Change version data" 
                        Command="{Binding Path=Parent.DataContext.ReVersionCheckpoint, 
                    RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}"  />

                    <MenuItem Header="Delete" 
            Command="{Binding Path=Parent.DataContext.DeleteCheckpoint, 
                    RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}" />

                    <MenuItem Header="Sort" 
            Command="{Binding Path=Parent.DataContext.SortCheckpoint, 
                    RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}" />
                </ContextMenu>
            </ListView.Resources>

            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}" >
                    <Setter Property="ContextMenu" Value="{StaticResource CheckpointContextMenu}" />
                    <Style.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex"  Value="0">
                            <Setter Property="Background" Value="{DynamicResource WhiteSmoke}" />
                        </Trigger>
                        <Trigger Property="ItemsControl.AlternationIndex"  Value="1">
                            <Setter Property="Background" Value="{DynamicResource LightGray}" />
                        </Trigger>

                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.View >
                <GridView >
                    <GridViewColumn Header="Level" b:GridColumn.MinWidth="35" Width="35" DisplayMemberBinding="{Binding LevelName}"  >


                    </GridViewColumn>
                    <GridViewColumn Header="Name" b:GridColumn.MinWidth="55" Width="90" DisplayMemberBinding="{Binding CheckpointName}">

                    </GridViewColumn>
                    <GridViewColumn Header="Diff" b:GridColumn.MinWidth="30" Width="30" DisplayMemberBinding="{Binding Difficulty, Converter={StaticResource DifficultyConverter}}"/>
                    <GridViewColumn Header="IGT" b:GridColumn.MinWidth="35" Width="35" DisplayMemberBinding="{Binding GameTickCount, Converter={StaticResource IGTConverter}}" />
                    <GridViewColumn Header="Version" b:GridColumn.MinWidth="35" Width="35" DisplayMemberBinding="{Binding GameVersion}"/>
                    <GridViewColumn Header="Created" b:GridColumn.MinWidth="50" Width="50" DisplayMemberBinding="{Binding CreatedOn}"/>
                    
                </GridView>

            </ListView.View>
            
        </ListView>
    </Grid>
</UserControl>
