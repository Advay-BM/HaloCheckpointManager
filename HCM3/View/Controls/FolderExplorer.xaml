<UserControl x:Class="HCM3.View.Controls.FolderExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCM3.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="255" d:DesignWidth="200"
             xmlns:viewModels="clr-namespace:HCM3.ViewModel"
             xmlns:CheckpointModel="clr-namespace:HCM3.Model.CheckpointModels"
            xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
             d:DataContext="{d:DesignInstance viewModels:CheckpointViewModel}">
    
    <Grid>
        <Grid.Resources>
            <HierarchicalDataTemplate DataType="{x:Type CheckpointModel:SaveFolder}"
                                ItemsSource = "{Binding Path=Children}" >
                <TextBlock Text="{Binding Path=SaveFolderName}"/>
            </HierarchicalDataTemplate>

        </Grid.Resources>
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Background="Transparent">
        </Border>
        <TreeView Background="Transparent" BorderThickness="0" ItemsSource="{Binding SaveFolderHierarchy}" SelectedItemChanged="TreeView_SelectedItemChanged" >


        </TreeView>






          
        
    </Grid>
</UserControl>
