        </TabItem>
        <TabItem  Header="Settings">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition  />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

            </Grid>
        </TabItem>


    </TabControl>
    
