<Window x:Class="HCM.Views.HCMWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:HCM="clr-namespace:HCM"
        xmlns:model="clr-namespace:HCM.Model"
        xmlns:views="clr-namespace:HCM.Views"
        Title="Halo Checkpoint Manager" 
        Width="800" Height="450"
        MinWidth="600" MinHeight="400"
        WindowStartupLocation="CenterScreen">

    <!-- 
  Establish handlers for the RenameCheckpoint command's events. 
  -->
    <Window.CommandBindings>
        <CommandBinding 
      Command="{x:Static HCM:Commands.RenameSelectedCheckpoint}" 
      CanExecute="RenameCheckpoint_CanExecute" 
      Executed="RenameCheckpoint_Executed" 
      />
    </Window.CommandBindings>

    <!-- 
  This is the View applied to the Model.
  -->
    <views:HCMWindowView />
</Window>
